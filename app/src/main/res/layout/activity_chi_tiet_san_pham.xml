<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.ChiTietSanPham">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarChiTietSP"
        android:layout_width="match_parent"
        app:title="Chi tiết sản phẩm"
        android:background="#E12113"
        app:titleTextColor="#D8D8CD"
        android:layout_height="?attr/actionBarSize"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageViewHinhAnhChiTietSP"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textviewTenSanPham"
                android:text="Ten san pham"
                android:textSize="20sp"
                android:textStyle="bold"

                ></TextView>
            <TextView
                android:id="@+id/textviewGiaChitietsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gia san pham"
                android:textStyle="bold"
                android:textSize="20sp"
                />

            <Spinner
                android:background="@drawable/spinner"
                android:padding="15dp"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:textAlignment="center" />

            <Button
                android:id="@+id/buttonThemGioHang"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Thêm vào giỏ hàng"
                android:textColor="#BD5433"
                ></Button>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm"
            android:textSize="30sp"
            android:textStyle="bold"
            ></TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textviewMotaChiTietSP"
                android:paddingBottom="10dp"
                android:text="mo ta chi tiet san pham"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                ></TextView>

        </ScrollView>

    </LinearLayout>
</LinearLayout>
